    <form action="/addUser"  method="post" enctype="multipart/form-data" class="register">
        <div class="modal fade" id="exampleModalToggle" aria-hidden="true" data-bs-backdrop="static" aria-labelledby="exampleModalToggleLabel" tabindex="-1">
            <div class="modal-dialog modal-dialog-centered">
              <div class="modal-content">
                <div class="modal-header justify-content-start">
                    <button type="button" class="btn-close d-flex justify-content-center align-items-center white_color" data-bs-dismiss="modal" aria-label="Close"  style="margin: 0;"><i class="fa-solid fa-xmark"></i></button>
                    <h1 class="modal-title ms-3 fs-5 white_color" id="exampleModalToggleLabel">Step 1 of 2</h1>
                </div>
                <div class="modal-body mx-5">
                  <div class="modal_body_contetnt">
                    <div>
                        <h3 class="white_color">Create your account</h3>
                      </div>
                      <div>
                        <div class="position-relative my-4">
                            <input type="text" name="name" id="name" class="white_color w-100" maxlength="50" oninput="countCharacters()">
                            <div class="input_letter" id="character-counter">0 / 50</div>
                            <span class="input_name">Name</span>
                        </div>
                        <div class="position-relative my-4">
                            <input type="tel" name="email" id="email" class="white_color w-100" required>
                            <span class="input_name">Email</span>
                        </div>
                        <div class="position-relative my-4">
                            <input type="tel" name="phone" id="phone" class="white_color w-100" pattern="[0-9]{10}" required>
                            <span class="input_name">Phone</span>
                        </div>
                        <div class="position-relative my-4">
                          <input type="file" accept="image/*" name="profile_pic"  required>
                          <span class="input_name">Profile Pic</span>
                          </div>
                        <!-- <div class="position-relative my-4">
                            <input type="date" name="dob" id="dob">
                            <span class="input_name">Date of birth</span>
                        </div> -->
                      </div>
                      <div>
                        <a class="next_btn f_15_18_500 d-block text-center black_color w-100" data-bs-target="#exampleModalToggle2" data-bs-toggle="modal" >Next</a>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <div class="modal fade" id="exampleModalToggle2" aria-hidden="true" data-bs-backdrop="static" aria-labelledby="exampleModalToggleLabel2" tabindex="-1">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                  <div class="modal-header justify-content-start">
                      <button type="button" class="btn-close d-flex justify-content-center align-items-center white_color"  data-bs-target="#exampleModalToggle" data-bs-toggle="modal"  style="margin: 0;"><i class="fa-solid fa-arrow-left"></i></button>
                      <h1 class="modal-title ms-3 fs-5 white_color" id="exampleModalToggleLabel">Step 2 of 2</h1>
                  </div>
                  <div class="modal-body mx-5">
                    <div class="modal_body_contetnt">
                      <div>
                          <h3 class="white_color">Create your account</h3>
                        </div>
                        <div>
                          <div class="position-relative my-4">
                              <input type="password" name="password" id="password" class="white_color w-100">
                              <div class="eye position-absolute" onclick="showPassword('password','pass')">
                                <img src="/public/img/eye.svg" id="pass" alt="showPassword">
                            </div>
                            <span class="input_name">Password</span>
                          </div>
                          <div class="position-relative my-4">
                              <input type="password" name="c_password" id="c_password" class="white_color w-100">
                              <div class="eye position-absolute" onclick="showPassword('c_password','c_pass')">
                                <img src="/public/img/eye.svg" id="c_pass" alt="showPassword">
                            </div>
                            <span class="input_name">Confirm Password</span>
                          </div>
                        </div>
                        <div>
                          <!-- <a class="next_btn f_15_18_500 d-block text-center black_color w-100" data-bs-target="#exampleModalToggle2" data-bs-toggle="modal">Next</a> -->
                          <button class="next_btn f_15_18_500 d-block text-center black_color w-100" type="submit">Submit</button>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
          </div>
    </form>



    <form action="/loginUser" method="post" class="register">
      <div class="modal fade" id="exampleModalToggle3" aria-hidden="true" data-bs-backdrop="static" aria-labelledby="exampleModalToggleLabel3" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
              <div class="modal-header justify-content-start">
                <button type="button" class="btn-close d-flex justify-content-center align-items-center white_color" data-bs-dismiss="modal" aria-label="Close"  style="margin: 0;"><i class="fa-solid fa-xmark"></i></button>
                <!-- <h1 class="modal-title ms-3 fs-5 white_color" id="exampleModalToggleLabel">Step 2 of 2</h1> -->
              </div>
              <div class="modal-body mx-5">
                <div class="modal_body_contetnt">
                  <div>
                      <h3 class="white_color">Login your account</h3>
                    </div>
                    <div>
                      <div class="position-relative my-4">
                          <input type="email" name="email" id="login_email" class="white_color w-100" required>
                        <span class="input_name">Email</span>
                        
                      </div>
                      <div class="position-relative my-4">
                          <input type="password" name="password" id="l_password" class="white_color w-100">
                          <div class="eye position-absolute" onclick="showPassword('l_password','c_pass')">
                            <img src="/public/img/eye.svg" id="c_pass" alt="showPassword">
                        </div>
                        <span class="input_name">Password</span>
                      </div>
                    </div>
                    <div>
                      <!-- <a class="next_btn f_15_18_500 d-block text-center black_color w-100" data-bs-target="#exampleModalToggle2" data-bs-toggle="modal">Next</a> -->
                      <button class="next_btn f_15_18_500 d-block text-center black_color w-100" type="submit">Submit</button>
                  </div>
                </div>
              </div>
            </div>
          </div>
      </div>
    </form>
    

